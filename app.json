  "drivers": [
    {
      "id": "tasmota",
      "class": "socket",
      "name": {
        "en": "Generic (Tasmota)"
      },
      "capabilities": [
        "onoff.1",
        "onoff.2",
        "onoff.3",
        "onoff.4",
        "windowcoverings_set"
      ],
      "capabilitiesOptions": {
        "onoff1": {
          "greyout": false
        }
      },
      "images": {
        "large": "drivers/tasmota/assets/images/large.png",
        "small": "drivers/tasmota/assets/images/small.png"
      },
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "list-devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": "MQTT",
          "children": [
            {
              "type": "group",
              "label": "Broker",
              "children": [
                {
                  "id": "mqttHost",
                  "type": "text",
                  "label": {
                    "en": "Hostname or IP-address"
                  },
                  "value": "127.0.0.1"
                },
                {
                  "id": "mqttPort",
                  "type": "text",
                  "label": {
                    "en": "Port",
                    "nl": "Poort"
                  },
                  "value": "1883",
                  "pattern": "^[0-9]+$"
                },
                {
                  "id": "mqttUser",
                  "type": "text",
                  "label": {
                    "en": "Username"
                  },
                  "value": "",
                  "optional": true
                },
                {
                  "id": "mqttPassword",
                  "type": "password",
                  "label": {
                    "en": "Password"
                  },
                  "value": "",
                  "optional": true
                }
              ]
            },
            {
              "type": "group",
              "label": "Topics",
              "collapsed": true,
              "children": [
                {
                  "id": "topic",
                  "type": "label",
                  "label": {
                    "en": "Device Topic"
                  },
                  "value": "",
                  "hint": {
                    "en": "The specific MQTT topic for this device."
                  }
                },
                {
                  "id": "fallbackTopic",
                  "type": "label",
                  "label": "Fallback Topic",
                  "value": "",
                  "hint": {
                    "en": "The fallback MQTT topic for this device."
                  }
                },
                {
                  "id": "groupTopic",
                  "type": "label",
                  "label": {
                    "en": "Group Topic"
                  },
                  "value": "",
                  "hint": {
                    "en": "Group topic for this device."
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Device Settings"
          },
          "children": [
            {
              "id": "powerOnState",
              "type": "dropdown",
              "label": {
                "en": "Power On State"
              },
              "hint": {
                "en": "State of device after it powers on and connects with Homey."
              },
              "value": "3",
              "values": [
                {
                  "id": "0",
                  "label": {
                    "en": "Off",
                    "nl": "Uit"
                  }
                },
                {
                  "id": "1",
                  "label": {
                    "en": "On",
                    "nl": "Aan"
                  }
                },
                {
                  "id": "2",
                  "label": {
                    "en": "Toggle from previous state",
                    "nl": "Wissel af met vorige instelling"
                  }
                },
                {
                  "id": "3",
                  "label": {
                    "en": "Switch to previously saved state",
                    "nl": "Schakel naar vorige opgeslagen instelling"
                  }
                },
                {
                  "id": "4",
                  "label": {
                    "en": "Switch on and disallow any more changes",
                    "nl": "Schakel aan en sta geen wijzigingen meer toe"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
